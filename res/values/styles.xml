<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/name_color</item>
        <item name="colorControlNormal">@color/name_color</item>
        <item name="colorControlActivated">@color/name_color</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="ActionBarOverlayTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension"/>
        <attr name="sl_shadowRadius" format="dimension"/>
        <attr name="sl_shadowColor" format="color"/>
        <attr name="sl_dx" format="dimension"/>
        <attr name="sl_dy" format="dimension"/>
    </declare-styleable>
    <style name="EditTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#555</item>
    </style>
</resources>