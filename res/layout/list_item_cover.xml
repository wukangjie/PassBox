<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/layout_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/uncheck_color"
        android:orientation="vertical">
        <View
            android:id="@+id/shadow_up"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/list_cover_view_margin"
            android:background="@drawable/ic_shadow_up"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/imageview_cover"
            android:layout_width="@dimen/list_item_cover"
            android:layout_height="@dimen/list_item_cover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/baidu" />

        <TextView
            android:id="@+id/textview_title_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageview_cover"
            android:gravity="center_horizontal"
            android:text="加载中"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/textview_account_cover"
            android:layout_width="match_parent"
            android:layout_below="@id/textview_title_cover"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="加载中"
            android:textColor="@color/list_cover_text"
            android:textSize="28sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/main_item_top"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_cover_collection_marginright"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_collection" />
        <View
            android:id="@+id/shadow_dowm"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/list_cover_view_margin"
            android:visibility="gone"
            android:background="@drawable/ic_shadow_up"
            />
    </RelativeLayout>

</RelativeLayout>