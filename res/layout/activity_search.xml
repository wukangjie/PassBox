<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/uncheck_color"
    android:orientation="vertical"
    tools:context="com.boguan.passbox.activity.SearchActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/uncheck_color">

        <ImageView
            android:id="@+id/activity_search_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/md_nav_back" />

        <EditText
            android:id="@+id/activity_search_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_search_edit_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_search_edit_left"
            android:layout_marginRight="@dimen/activity_search_edit_right"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:layout_toRightOf="@id/activity_search_back"
            android:background="@null" />

        <ImageView
            android:id="@+id/activity_search_voice"
            android:layout_width="@dimen/activity_search_voice_width"
            android:layout_height="@dimen/activity_search_voice_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_search_voice_right"
            android:src="@drawable/ic_voice" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:background="@drawable/search_back_title_shadow" />

    <FrameLayout
        android:id="@+id/activity_search_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
