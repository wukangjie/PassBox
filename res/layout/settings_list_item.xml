<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/settings_list_not_section_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/setting_list_item_bg">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layoutDirection="rtl"
            android:layout_centerVertical="true">

            <View
                android:id="@+id/marginView"
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/settings_list_item_nextPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/arrow"
                android:visibility="visible" />
            <TextView
                android:id="@+id/settings_list_item_value"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="value"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/settings_list_item_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="key"
            android:textColor="@color/item_key_txt_color"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <CheckBox
            android:id="@+id/settings_list_item_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:focusable="false"/>

        <ToggleButton
            android:id="@+id/settings_list_item_switch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:button="@drawable/setting_list_switch_bg"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:focusable="false" />
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_list_item_section_key"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="key"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:background="@color/item_section_bg"
        android:visibility="gone"/>

</LinearLayout>