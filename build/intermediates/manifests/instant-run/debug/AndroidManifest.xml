<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boguan.passbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="com.boguan.passbox.app.MyApplication"
        android:allowBackup="false"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >

        <!-- 友盟 -->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="533592ec56240b225e030413" />
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="0" />

        <service
            android:name="com.umeng.update.net.DownloadingService"
            android:process=":DownloadingService" />

        <activity
            android:name="com.umeng.update.UpdateDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!-- 友盟完 -->
        <!-- 主界面 -->
        <activity
            android:name="com.boguan.passbox.activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <!-- 启动界面：欢迎页 -->
        <activity
            android:name="com.boguan.passbox.activity.EntryActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.boguan.passbox.service.LocalService.MainService"
            android:exported="false"
            android:label="@string/app_name" />

        <!-- 增加、修改密码界面 -->
        <activity
            android:name="com.boguan.passbox.activity.EditPasswordActivity"
            android:label="@string/title_activity_add_password"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <!-- 设置图案解锁界面 -->
        <activity
            android:name="com.boguan.passbox.activity.SetLockpatternActivity"
            android:label="@string/action_login_password"
            android:screenOrientation="portrait" />

        <!-- 关于界面 -->
        <activity
            android:name="com.boguan.passbox.activity.AboutActivity"
            android:label="@string/action_about_us"
            android:screenOrientation="portrait" />

        <!-- 意见反馈界面 -->
        <activity
            android:name="com.boguan.passbox.activity.FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:screenOrientation="portrait" />

        <!-- 密码导入导出 -->
        <activity
            android:name="com.boguan.passbox.activity.PasswordActivity"
            android:label="密码导入与导出"
            android:screenOrientation="portrait" />
        <!-- 快盘授权 -->
        <activity
            android:name="com.boguan.passbox.activity.OauthActivity"
            android:label="快盘授权登录"
            android:screenOrientation="portrait" />

        <!-- app首次使用 快盘登录界面 -->
        <activity
            android:name="com.boguan.passbox.activity.LoginKuaiPanActivity"
            android:label="登录快盘"
            android:screenOrientation="portrait" />

        <!-- app首次使用 选择登陆网盘界面 -->
        <activity
            android:name="com.boguan.passbox.activity.CloudOptionsActivity"
            android:label="选择您要登陆的网盘"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.boguan.passbox.activity.SettingsActivity"
            android:label="设定"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.boguan.passbox.activity.PasswordDetailsActivity"
            android:label="密码放大页面"
            android:screenOrientation="portrait" />
        <activity android:name="com.boguan.passbox.activity.SearchActivity" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.boguan.passbox.com.squareup.picasso"
            android:exported="false" />
        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.boguan.passbox.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>